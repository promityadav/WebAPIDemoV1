@model Shirt
<h3>Shirt</h3>
<form method="post" asp-action="CreateShirt">
    <div class="text-danger" asp-validation-summary="All">

    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Brand" class="col-form-lable"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Brand" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Brand"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Gender" class="col-form-lable"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Gender" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="color" class="col-form-lable"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="color" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="color"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Size" class="col-form-lable"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Size" class="form-control" min="1" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Size"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Price" class="col-form-lable"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Price" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="submit" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>